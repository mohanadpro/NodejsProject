<div class="container">
      <div class="row">
            <div class="col-sm-3">
                  <img src="/images/Avatar.jpg" id="imgProfile" class="img-thumbnail">
                  <input type="file" id="fileImage" style="margin-top: 20px;" />
                  <div id="divButtonProfileImageActions" class="d-none divButtonProfileImageActions">
                        <a class="btn btn-danger" href="/users/profile">Cancle</a>
                        <button class="btn btn-success" >Save</button>
                  </div>
            </div>
            <div class="col-sm-9">
                  <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item">
                              <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab"
                                    >Home</a>
                        </li>
                        <li class="nav-item">
                              <a class="nav-link" id="Orders-tab" data-toggle="tab" href="#Orders" role="tab"
                                    >Orders</a>
                        </li>
                  </ul>
                  <div class="tab-content" id="myTabContent">
                        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">                             
                              <form>
                                    <div class="form-group">
                                          <label for="formUsername">Username</label>
                                          <input type="text" class="form-control" id="txtUsernam" placeholder="Enter Username">
                                    </div>
                                    <div class="form-group">
                                          <label for="formAddress">Email</label>
                                          <input type="email" class="form-control" id="txtEmail" placeholder="Enter Email">
                                    </div>
                                    <div class="form-group">
                                          <label for="formAddress">Address</label>
                                          <input type="text" class="form-control" id="txtAddress" placeholder="Enter Address">
                                    </div>
                                    <div class="form-group">
                                          <label for="formPhonNumber">Phone number</label>
                                          <input type="text" class="form-control" id="txtPhoneNumber" placeholder="Enter Phone number">
                                    </div>
                                    <div class="form-group">
                                          <label for="formPassword">Password</label>
                                          <input type="password" class="form-control" id="txtPassword" placeholder="Enter Password">
                                    </div>
                                    <div class="text-center">
                                       <button type="button" class="btn btn-success">Update info</button>
                                    </div>
                              </form>
                        </div>
                        <div class="tab-pane fade" id="Orders" role="tabpanel" aria-labelledby="profile-tab">
                              <table class="table fold-table text-center" style="margin-top: 50px;">
                                    <thead class="theader text-center">
                                          <th class="text-center" scope="col">Name</th>
                                          <th class="text-center" scope="col">Address</th>
                                          <th class="text-center" scope="col">Payment Id</th>
                                          <th class="text-center" scope="col">Total Price</th>
                                    </thead>
                                    <tbody>
                                          {{#each orders as |alias|}}
                                          <tr class="view">
                                                <td>{{alias.name}}</td>
                                                <td>{{alias.address}}</td>
                                                <td>{{alias.paymentId}}</td>
                                                <td>{{alias.totalPrice}}</td>
                                          </tr>

                                          <tr class="fold">
                                                <td colspan="5">
                                                      <table>
                                                            <thead class="theader">
                                                                  <th scope="col">Product Name</th>
                                                                  <th scope="col">Product Price</th>
                                                                  <th scope="col">Product count</th>
                                                            </thead>
                                                            {{#each alias.cart.selectedProduct as |product|}}
                                                            <tr>
                                                                  <td>{{product.name}}</td>
                                                                  <td>{{product.price}}</td>
                                                                  <td>{{product.count}}</td>
                                                            </tr>
                                                            {{/each}}
                                                      </table>
                                                </td>
                                          </tr>


                                          {{/each}}

                                    </tbody>
                              </table>
                        </div>
                  </div>
            </div>
      </div>
</div>


<script src="/javascripts/profile.js"></script>